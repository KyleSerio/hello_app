<p id="notice"><%= notice %></p>

<table class="table table-striped table-bordered table-hover">
  <thead class="table-dark">
    <tr>
      <th>Name</th>
      <th>Class</th>
      <th>Type</th>
      <th>Current DKP</th>
      <th>30 day %</th>
      <th>Lifetime %</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @players.each do |player| %>
      <tr>
        <td><%= player.Name %></td>
        <td><%= player.Class %></td>
        <td><%= player.Type %></td>
        <td><%= player.CurrentDKP %></td>
        <td><%= player.Month %></td>
        <td><%= player.Lifetime %></td>
        <td><%= link_to 'Show', player, class:"btn btn-secondary" %></td>
        <td><%= link_to 'Edit', edit_player_path(player), class:"btn btn-secondary" %></td>
        <td><%= link_to 'Destroy', player, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-secondary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Player', new_player_path, class:"btn btn-secondary" %>
